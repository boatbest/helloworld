<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray">

    <LinearLayout
        android:id="@+id/Content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="26dp"
            >
            <View
                android:id="@+id/viewTop_1"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:background="#ffffff"
                />
            <View
                android:id="@+id/viewTop_2"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                />
            <View
                android:id="@+id/viewTop_3"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:background="#ffffff"
                />
            <View
                android:id="@+id/viewTop_4"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:background="#ffffff"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="26dp">
            <View
                android:id="@+id/viewMiddle_1"
                android:layout_width="220dp"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:background="@color/colorWhite"
                />
            <View
                android:id="@+id/viewMiddle_2"
                android:layout_width="220dp"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:background="@color/colorWhite"
                />
            <View
                android:id="@+id/viewMiddle_3"
                android:layout_width="220dp"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:background="@color/colorWhite"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:id="@+id/viewBottom_1"
                android:layout_width="220dp"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:background="@color/colorWhite"
                />
            <View
                android:id="@+id/viewBottom_2"
                android:layout_width="220dp"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:background="@color/colorWhite"
                />
            <View
                android:id="@+id/viewBottom_3"
                android:layout_width="220dp"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:background="@color/colorWhite"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/NavBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:background="@color/colorWhite">
        <View
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@color/colorGray"/>
        <View
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:background="@color/colorGray"/>
        <View
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@color/colorGray"/>
    </LinearLayout>

</RelativeLayout>



